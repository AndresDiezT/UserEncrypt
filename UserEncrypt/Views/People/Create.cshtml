@model UserEncrypt.Models.Person

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .form-container {
        display: flex;
        justify-content: center;
        align-items: center;
        flex-direction: column;
        background-color: #333;
        padding: 30px;
        border-radius: 10px;
        max-width: 600px;
        margin: 0 auto;
    }

        .form-container h4 {
            color: #D1B0FF;
            text-align: center;
        }

        .form-container hr {
            border-color: #5F1FB4;
        }

    .form-group {
        margin-bottom: 20px;
    }

        .form-group label {
            color: #D1B0FF;
            font-weight: bold;
        }

    .form-control {
        border-radius: 5px;
        padding: 10px;
        background-color: #444;
        color: #fff;
        border: 1px solid #5F1FB4;
    }

        .form-control:focus {
            background-color: #555;
            border-color: #5F1FB4;
            box-shadow: 0 0 5px rgba(95, 31, 180, 0.8);
        }

    .btn-primary {
        background-color: #5F1FB4;
        border-color: #5F1FB4;
        border-radius: 5px;
        padding: 10px 20px;
        font-weight: bold;
        width: 100%;
        transition: background-color 0.3s ease;
    }

        .btn-primary:hover {
            background-color: #4a1686;
            border-color: #4a1686;
        }

    .text-center a {
        color: #FFD700;
        font-weight: bold;
    }
</style>

<h2 class="text-center" style="color: #D1B0FF;">Agregar Persona</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-container">

        <h4>Persona</h4>
        <hr />

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <!-- Campo First Name -->
        <div class="form-group">
            @Html.LabelFor(model => model.FirstName)
            @Html.EditorFor(model => model.FirstName, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.FirstName, "", new { @class = "text-danger" })
        </div>

        <!-- Campo Last Name -->
        <div class="form-group">
            @Html.LabelFor(model => model.LastName)
            @Html.EditorFor(model => model.LastName, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.LastName, "", new { @class = "text-danger" })
        </div>

        <!-- Campo Identification Number -->
        <div class="form-group">
            @Html.LabelFor(model => model.IdentificationNumber)
            @Html.EditorFor(model => model.IdentificationNumber, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.IdentificationNumber, "", new { @class = "text-danger" })
        </div>

        <!-- Campo Email -->
        <div class="form-group">
            @Html.LabelFor(model => model.Email)
            @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
        </div>

        <!-- Campo Document Type -->
        <div class="form-group">
            @Html.LabelFor(model => model.DocumentType)
            @Html.EditorFor(model => model.DocumentType, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.DocumentType, "", new { @class = "text-danger" })
        </div>

        <!-- Botón de Submit -->
        <div class="form-group">
            <input type="submit" value="Agregar" class="btn btn-primary" />
        </div>

    </div>
}

<div class="text-center" style="margin-top: 20px;">
    @Html.ActionLink("Back to List", "Index", new { @class = "btn btn-link", style = "color: #FFD700;" })
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
