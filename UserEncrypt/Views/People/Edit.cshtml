@model UserEncrypt.Models.Person

@{
    ViewBag.Title = "Editar Persona";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <!-- Título -->
    <h2 class="text-center mb-4" style="color: white;">Editar Persona</h2>

    <!-- Formulario de edición -->
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="card shadow-lg" style="background-color: #1a1a1a; color: white; border: 1px solid #6a0dad;">
            <div class="card-header text-center" style="background-color: #6a0dad; color: white;">
                <h4>Formulario de Edición</h4>
            </div>
            <div class="card-body">
                @Html.ValidationSummary(true, "", new { @class = "alert alert-danger" })
                @Html.HiddenFor(model => model.Id)

                <!-- Campo para Nombre -->
                <div class="form-group mb-3">
                    <label for="FirstName" class="form-label">@Html.DisplayNameFor(model => model.FirstName)</label>
                    @Html.EditorFor(model => model.FirstName, new { htmlAttributes = new { @class = "form-control", placeholder = "Ingrese el nombre" } })
                    @Html.ValidationMessageFor(model => model.FirstName, "", new { @class = "text-danger" })
                </div>

                <!-- Campo para Apellido -->
                <div class="form-group mb-3">
                    <label for="LastName" class="form-label">@Html.DisplayNameFor(model => model.LastName)</label>
                    @Html.EditorFor(model => model.LastName, new { htmlAttributes = new { @class = "form-control", placeholder = "Ingrese el apellido" } })
                    @Html.ValidationMessageFor(model => model.LastName, "", new { @class = "text-danger" })
                </div>

                <!-- Campo para Número de Identificación -->
                <div class="form-group mb-3">
                    <label for="IdentificationNumber" class="form-label">@Html.DisplayNameFor(model => model.IdentificationNumber)</label>
                    @Html.EditorFor(model => model.IdentificationNumber, new { htmlAttributes = new { @class = "form-control", placeholder = "Ingrese el número de identificación" } })
                    @Html.ValidationMessageFor(model => model.IdentificationNumber, "", new { @class = "text-danger" })
                </div>

                <!-- Campo para Correo Electrónico -->
                <div class="form-group mb-3">
                    <label for="Email" class="form-label">@Html.DisplayNameFor(model => model.Email)</label>
                    @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control", placeholder = "Ingrese el correo electrónico" } })
                    @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                </div>

                <!-- Campo para Fecha de Creación -->
                <div class="form-group mb-3">
                    <label for="CreatedAt" class="form-label">@Html.DisplayNameFor(model => model.CreatedAt)</label>
                    @Html.EditorFor(model => model.CreatedAt, new { htmlAttributes = new { @class = "form-control", placeholder = "Seleccione la fecha de creación" } })
                    @Html.ValidationMessageFor(model => model.CreatedAt, "", new { @class = "text-danger" })
                </div>

                <!-- Campo para Tipo de Documento -->
                <div class="form-group mb-3">
                    <label for="DocumentType" class="form-label">@Html.DisplayNameFor(model => model.DocumentType)</label>
                    @Html.EditorFor(model => model.DocumentType, new { htmlAttributes = new { @class = "form-control", placeholder = "Seleccione el tipo de documento" } })
                    @Html.ValidationMessageFor(model => model.DocumentType, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="card-footer text-center">
                <!-- Botón para guardar -->
                <button type="submit" class="btn btn-primary" style="background-color: #6a0dad; border-color: #6a0dad;">Guardar</button>
                <a href="@Url.Action("Index")" class="btn btn-secondary">Volver a la Lista</a>
            </div>
        </div>
    }
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
