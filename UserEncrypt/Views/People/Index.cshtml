@model IEnumerable<UserEncrypt.Models.Person>

@{
    ViewBag.Title = "Lista de Personas";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <!-- Título de la Página -->
    <h2 class="text-center mb-4" style="color: black;">Lista de Personas</h2>

    <!-- Botón de Agregar Persona -->
    <div class="text-center mb-4">
        <a href="@Url.Action("Create")"
           class="btn btn-lg"
           style="background-color: #6a0dad; color: white; border-radius: 8px; padding: 10px 20px; text-decoration: none;">
            Agregar Persona
        </a>
    </div>

    <!-- Tabla de Personas -->
    <div class="table-responsive">
        <table class="table table-dark table-striped table-bordered shadow-lg">
            <thead style="background-color: #6a0dad; color: white;">
                <tr>
                    <th>@Html.DisplayNameFor(model => model.FirstName)</th>
                    <th>@Html.DisplayNameFor(model => model.LastName)</th>
                    <th>@Html.DisplayNameFor(model => model.IdentificationNumber)</th>
                    <th>@Html.DisplayNameFor(model => model.Email)</th>
                    <th>@Html.DisplayNameFor(model => model.CreatedAt)</th>
                    <th>@Html.DisplayNameFor(model => model.DocumentType)</th>
                    <th class="text-center">Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.FirstName)</td>
                        <td>@Html.DisplayFor(modelItem => item.LastName)</td>
                        <td>@Html.DisplayFor(modelItem => item.IdentificationNumber)</td>
                        <td>@Html.DisplayFor(modelItem => item.Email)</td>
                        <td>@Html.DisplayFor(modelItem => item.CreatedAt)</td>
                        <td>@Html.DisplayFor(modelItem => item.DocumentType)</td>
                        <td class="text-center">
                            <!-- Botones de Acciones -->
                            <a href="@Url.Action("Edit", new { id = item.Id })"
                               class="btn btn-sm btn-warning me-2">
                                Editar
                            </a>
                            <a href="@Url.Action("Details", new { id = item.Id })"
                               class="btn btn-sm btn-info me-2">
                                Detalles
                            </a>
                            <a href="@Url.Action("Delete", new { id = item.Id })"
                               class="btn btn-sm btn-danger"
                               onclick="return confirm('¿Estás seguro de que quieres eliminar esta persona?');">
                                Eliminar
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
