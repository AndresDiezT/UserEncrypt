@model IEnumerable<UserEncrypt.Models.Person>

@{
    ViewBag.Title = "Personas - Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="text-center" style="color: #b19cd9;">Listado de Personas</h2>

<p class="text-end">
    @Html.ActionLink("Crear Nueva Persona", "Create", null, new { @class = "btn btn-primary", style = "background-color: #6a0dad; border: none;" })
</p>

<div class="table-responsive">
    <table class="table table-dark table-hover text-center">
        <thead class="bg-dark" style="color: #ffd700;">
            <tr>
                <th>@Html.DisplayNameFor(model => model.FirstName)</th>
                <th>@Html.DisplayNameFor(model => model.LastName)</th>
                <th>@Html.DisplayNameFor(model => model.IdentificationNumber)</th>
                <th>@Html.DisplayNameFor(model => model.Email)</th>
                <th>@Html.DisplayNameFor(model => model.CreatedAt)</th>
                <th>@Html.DisplayNameFor(model => model.DocumentType)</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            @if (!Model.Any())
            {
                <tr>
                    <td colspan="7" class="text-warning">No hay personas registradas.</td>
                </tr>
            }
            else
            {
                foreach (var item in Model)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.FirstName)</td>
                        <td>@Html.DisplayFor(modelItem => item.LastName)</td>
                        <td>@Html.DisplayFor(modelItem => item.IdentificationNumber)</td>
                        <td>@Html.DisplayFor(modelItem => item.Email)</td>
                        <td>@Html.DisplayFor(modelItem => item.CreatedAt)</td>
                        <td>@Html.DisplayFor(modelItem => item.DocumentType)</td>
                        <td>
                            <a href="@Url.Action("Edit", new { id = item.Id })" class="btn btn-outline-warning btn-sm">Editar</a>
                            <a href="@Url.Action("Details", new { id = item.Id })" class="btn btn-outline-info btn-sm">Detalles</a>
                            <a href="@Url.Action("Delete", new { id = item.Id })" class="btn btn-outline-danger btn-sm">Eliminar</a>
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>
