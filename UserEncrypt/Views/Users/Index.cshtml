@model IEnumerable<UserEncrypt.Models.User>

@{
    ViewBag.Title = "Lista de Usuarios";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <!-- Título de la Página -->
    <h2 class="text-center mb-4" style="color: black;">Lista de Usuarios</h2>

    <!-- Botón de Crear Usuario -->
    <div class="text-center mb-4">
        @Html.ActionLink("Crear Nuevo Usuario", "Register", "Auth", new { @class = "btn btn-lg", style = "background-color: #6a0dad; color: white; border: none;" })
    </div>

    <!-- Tabla de Usuarios -->
    <div class="table-responsive">
        <table class="table table-dark table-striped table-bordered shadow-lg">
            <thead style="background-color: #6a0dad; color: white;">
                <tr>
                    <th>@Html.DisplayNameFor(model => model.Username)</th>
                    <th>@Html.DisplayNameFor(model => model.CreatedAt)</th>
                    <th class="text-center">Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.Username)</td>
                        <td>@Html.DisplayFor(modelItem => item.CreatedAt)</td>
                        <td class="text-center">
                            <!-- Botones de Acciones -->
                            <a href="@Url.Action("Details", "Users", new { id = item.Id })"
                               class="btn btn-info btn-sm me-2">
                                Detalles
                            </a>
                            <a href="@Url.Action("Delete", "Users", new { id = item.Id })"
                               class="btn btn-danger btn-sm"
                               onclick="return confirm('¿Estás seguro de que quieres eliminar este usuario?');">
                                Eliminar
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
