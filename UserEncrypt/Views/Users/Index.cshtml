@model IEnumerable<UserEncrypt.Models.User>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="text-center" style="color: #b19cd9;">Listado de Usuarios</h2>

<div class="text-center mb-4">
    <a href="@Url.Action("Register", "Auth")" class="btn" style="background-color: #6a0dad; color: white;">Registrar Nuevo Usuario</a>
</div>

<table class="table table-dark table-bordered table-striped">
    <thead class="bg-dark" style="color: #ffd700;">
        <tr>
            <th>@Html.DisplayNameFor(model => model.Username)</th>
            <th>@Html.DisplayNameFor(model => model.CreatedAt)</th>
            <th style="width: 150px;">Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Username)</td>
                <td>@Html.DisplayFor(modelItem => item.CreatedAt)</td>
                <td class="d-flex justify-content-around">
                    <!-- Acciones con botones morados -->
                    <a href="@Url.Action("Edit", "Users", new { id = item.Id })" class="btn btn-outline-light" style="background-color: #6a0dad; border-color: #6a0dad;">Editar</a> |
                    <a href="@Url.Action("Details", "Users", new { id = item.Id })" class="btn btn-outline-light" style="background-color: #6a0dad; border-color: #6a0dad;">Detalles</a> |
                    <a href="@Url.Action("Delete", "Users", new { id = item.Id })" class="btn btn-outline-light" style="background-color: #6a0dad; border-color: #6a0dad;">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>
