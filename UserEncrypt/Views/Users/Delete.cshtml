@model UserEncrypt.Models.User

@{
    ViewBag.Title = "Eliminar Usuario";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-lg" style="background-color: #000000; color: white; border: 1px solid #6a0dad;">
                <div class="card-header text-center" style="background-color: #6a0dad; color: white;">
                    <h3>Eliminar Usuario</h3>
                </div>
                <div class="card-body">
                    <h4 class="text-center">¿Estás seguro de que deseas eliminar este usuario?</h4>
                    <hr style="border-color: #6a0dad;" />

                    <dl class="row">
                        <dt class="col-sm-4">Nombre de Usuario</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Username)</dd>

                        <dt class="col-sm-4">Fecha de Creación</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.CreatedAt)</dd>
                    </dl>
                </div>
                <div class="card-footer text-center">
                    <!-- Botones de acción -->
                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()

                        <button type="submit" class="btn btn-danger" style="margin-right: 10px;">Eliminar</button>
                        @Html.ActionLink("Cancelar", "Index", null, new { @class = "btn btn-secondary", style = "color: white;" })
                    }
                </div>
            </div>
        </div>
    </div>
</div>
