@model UserEncrypt.Models.User

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="container mt-5">
    <h2 class="text-center mb-4" style="color: white;">Editar Usuario</h2>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="card shadow-lg" style="background-color: #1a1a1a; color: white; border: 1px solid #6a0dad;">
            <div class="card-header text-center" style="background-color: #6a0dad; color: white;">
                <h4>Formulario de Edición</h4>
            </div>
            <div class="card-body">
                @Html.ValidationSummary(true, "", new { @class = "alert alert-danger" })
                @Html.HiddenFor(model => model.Id)
                @Html.HiddenFor(model => model.PasswordHash)
                @Html.HiddenFor(model => model.HashKey)
                @Html.HiddenFor(model => model.HashIV)
                @Html.HiddenFor(model => model.CreatedAt)

                <!-- Campo para Nombre -->
                <div class="form-group mb-3">
                    <label for="FirstName" class="form-label">@Html.DisplayNameFor(model => model.Username)</label>
                    @Html.EditorFor(model => model.Username, new { htmlAttributes = new { @class = "form-control", placeholder = "Ingrese el nombre de usuario" } })
                    @Html.ValidationMessageFor(model => model.Username, "", new { @class = "text-danger" })
                </div>

            </div>
            <div class="card-footer text-center">
                <!-- Botón para guardar -->
                <button type="submit" class="btn btn-primary" style="background-color: #6a0dad; border-color: #6a0dad;">Guardar</button>
                <a href="@Url.Action("Index")" class="btn btn-secondary">Volver a la Lista</a>
            </div>
        </div>
    }
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
