@model UserEncrypt.Models.User

@{
    ViewBag.Title = "Editar Usuario";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="text-center" style="color: #b19cd9;">Editar Usuario</h2>

<div class="container mt-4">
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="card" style="background-color: #222222; color: white;">
            <div class="card-body">
                <h4 class="card-title" style="color: #ffd700;">Información del Usuario</h4>
                <hr style="border-color: #6a0dad;" />

                @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                @Html.HiddenFor(model => model.Id)
                @Html.HiddenFor(model => model.PasswordHash)
                @Html.HiddenFor(model => model.HashKey)
                @Html.HiddenFor(model => model.HashIV)
                @Html.HiddenFor(model => model.CreatedAt)

                <!-- Campo para el Nombre de Usuario -->
                <div class="form-group mb-3">
                    @Html.LabelFor(model => model.Username, htmlAttributes: new { @class = "form-label" })
                    @Html.EditorFor(model => model.Username, new { htmlAttributes = new { @class = "form-control", placeholder = "Ingrese el nombre de usuario" } })
                    @Html.ValidationMessageFor(model => model.Username, "", new { @class = "text-danger" })
                </div>

                <!-- Botones de acción -->
                <div class="form-group text-center">
                    <input type="submit" value="Guardar" class="btn" style="background-color: #6a0dad; border-color: #6a0dad; color: white;" />
                    @Html.ActionLink("Volver a la Lista", "Index", null, new { @class = "btn", style = "background-color: #3c3b6e; color: white; margin-left: 10px;" })
                </div>
            </div>
        </div>
    }
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
