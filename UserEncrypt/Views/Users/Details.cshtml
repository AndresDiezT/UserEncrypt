@model UserEncrypt.Models.User

@{
    ViewBag.Title = "Detalles del Usuario";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="text-center" style="color: #b19cd9;">Detalles del Usuario</h2>

<div class="container mt-4">
    <div class="card" style="background-color: #222222; color: white;">
        <div class="card-body">
            <h4 class="card-title" style="color: #ffd700;">Información del Usuario</h4>
            <hr style="border-color: #6a0dad;" />

            <dl class="row">
                <dt class="col-sm-3" style="color: #6a0dad;">
                    @Html.DisplayNameFor(model => model.Username)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Username)
                </dd>

                <dt class="col-sm-3" style="color: #6a0dad;">
                    @Html.DisplayNameFor(model => model.CreatedAt)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.CreatedAt)
                </dd>
            </dl>

            <div class="text-center">
                <!-- Acciones con botones morados -->
                <a href="@Url.Action("Edit", "Users", new { id = Model.Id })" class="btn" style="background-color: #6a0dad; border-color: #6a0dad; color: white;">Editar</a>
                <a href="@Url.Action("Index", "Users")" class="btn" style="background-color: #3c3b6e; color: white; margin-left: 10px;">Volver a la Lista</a>
            </div>
        </div>
    </div>
</div>
