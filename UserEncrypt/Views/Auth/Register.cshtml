@model UserEncrypt.Models.User

@{
    ViewBag.Title = "Registrar Usuario";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow" style="background-color: #222222; color: white;">
                <div class="card-header" style="background-color: #6a0dad; color: white;">
                    <h3>Registro de Usuario</h3>
                </div>
                <div class="card-body">
                    <!-- Mensajes de validación generales -->
                    @Html.ValidationSummary(true, "", new { @class = "alert alert-danger" })

                    <!-- Formulario de Registro -->
                    @using (Html.BeginForm("Register", "Auth", FormMethod.Post, new { @id = "registerForm" }))
                    {
                        @Html.AntiForgeryToken()

                        <div class="form-group">
                            <!-- Campo para el Nombre de Usuario -->
                            <label for="Username" class="form-label" style="color: #6a0dad;">@Html.DisplayNameFor(model => model.Username)</label>
                            @Html.TextBoxFor(model => model.Username, new { @class = "form-control", placeholder = "Ingrese su nombre de usuario", style = "background-color: #333333; color: white;" })
                            @Html.ValidationMessageFor(model => model.Username, "", new { @class = "text-danger" })
                        </div>

                        <div class="form-group mt-3">
                            <!-- Campo para la Contraseña -->
                            <label for="PasswordHash" class="form-label" style="color: #6a0dad;">@Html.DisplayNameFor(model => model.PasswordHash)</label>
                            @Html.PasswordFor(model => model.PasswordHash, new { @class = "form-control", placeholder = "Ingrese su contraseña", style = "background-color: #333333; color: white;" })
                            @Html.ValidationMessageFor(model => model.PasswordHash, "", new { @class = "text-danger" })
                        </div>

                        <!-- Botón para enviar el formulario -->
                        <div class="form-group mt-4 text-center">
                            <button type="submit" class="btn" style="background-color: #6a0dad; border-color: #6a0dad; color: white; width: 100%;">Registrar</button>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
