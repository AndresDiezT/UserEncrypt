@model UserEncrypt.Models.User

@{
    ViewBag.Title = "Registrar Usuario";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow">
                <div class="card-header bg-primary text-white text-center">
                    <h3>Registro de Usuario</h3>
                </div>
                <div class="card-body">
                    <!-- Mensajes de validación generales -->
                    @Html.ValidationSummary(true, "", new { @class = "alert alert-danger" })

                    <!-- Formulario de Registro -->
                    @using (Html.BeginForm("Register", "Auth", FormMethod.Post, new { @id = "registerForm" }))
                    {
                        @Html.AntiForgeryToken()

                        <div class="form-group">
                            <!-- Campo para el Nombre de Usuario -->
                            <label for="Username" class="form-label">@Html.DisplayNameFor(model => model.Username)</label>
                            @Html.TextBoxFor(model => model.Username, new { @class = "form-control", placeholder = "Ingrese su nombre de usuario" })
                            @Html.ValidationMessageFor(model => model.Username, "", new { @class = "text-danger" })
                        </div>

                        <div class="form-group mt-3">
                            <!-- Campo para la Contraseña -->
                            <label for="PasswordHash" class="form-label">@Html.DisplayNameFor(model => model.PasswordHash)</label>
                            @Html.PasswordFor(model => model.PasswordHash, new { @class = "form-control", placeholder = "Ingrese su contraseña" })
                            @Html.ValidationMessageFor(model => model.PasswordHash, "", new { @class = "text-danger" })
                        </div>

                        <!-- Botón para enviar el formulario -->
                        <div class="form-group mt-4 text-center">
                            <button type="submit" class="btn btn-primary btn-block">Registrar</button>
                        </div>
                    }
                </div>
                <div class="card-footer text-center">
                    <small>¿Ya tienes una cuenta? <a href="/Auth/Login" class="text-primary">Inicia sesión</a></small>
                </div>
            </div>
        </div>
    </div>
</div>
