<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Mi aplicación ASP.NET</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

    <!-- Estilos personalizados para la navbar -->
    <style>
        .navbar {
            background-color: #000000; /* Fondo negro */
        }

            .navbar .navbar-brand {
                color: white; /* Color blanco para el logo */
            }

            .navbar .navbar-nav .nav-link {
                color: white; /* Color blanco para los enlaces */
            }

                .navbar .navbar-nav .nav-link:hover {
                    color: #6a0dad; /* Color morado para el hover de los enlaces */
                }

            .navbar .navbar-nav .nav-item:last-child .nav-link {
                color: #6a0dad; /* Color morado para el enlace de "Cerrar sesión" */
            }

                .navbar .navbar-nav .nav-item:last-child .nav-link:hover {
                    color: #4b0082; /* Efecto hover morado oscuro */
                }

        .navbar-toggler-icon {
            background-color: white; /* Icono de la barra de navegación en blanco */
        }
    </style>
</head>
<body>
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark">
        <div class="container">
            <!-- Logo a la derecha -->
            <div class="ms-auto">
                @Html.ActionLink("Super Management", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>

            <button type="button" class="navbar-toggler" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" title="Alternar navegación" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse d-sm-inline-flex justify-content-center">
                <!-- Centrado de los enlaces -->
                <ul class="navbar-nav flex-grow-1">
                    <li class="nav-item">
                        @Html.ActionLink("Inicio", "Index", "Home", new { area = "" }, new { @class = "nav-link" })
                    </li>
                    <li class="nav-item">
                        @Html.ActionLink("Acerca de", "About", "Home", new { area = "" }, new { @class = "nav-link" })
                    </li>
                    <li class="nav-item">
                        @Html.ActionLink("Contacto", "Contact", "Home", new { area = "" }, new { @class = "nav-link" })
                    </li>
                </ul>
            </div>

            <!-- Cerrar sesión y cambiar contraseña a la derecha -->
            <ul class="navbar-nav ms-auto">
                <li class="nav-item">
                    @Html.ActionLink("Cerrar sesión", "Logout", "Auth", new { area = "" }, new { @class = "nav-link" })
                </li>
                <li class="nav-item">
                    @Html.ActionLink("Cambiar Contraseña", "ChangePassword", "Auth", new { area = "" }, new { @class = "nav-link" })
                </li>
            </ul>
        </div>
    </nav>

    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Mi aplicación ASP.NET</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
